<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>HomePageController</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.unimazad.controllers.auth.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.unimazad.controllers.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>com.unimazad.controllers.home.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.unimazad.controllers.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NavigationController</servlet-name>
        <servlet-class>com.unimazad.controllers.navigation.NavigationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewProductListing</servlet-name>
        <servlet-class>com.unimazad.controllers.seller.NewProductListing</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMyListings</servlet-name>
        <servlet-class>com.unimazad.controllers.seller.GetMyListings</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllProductsController</servlet-name>
        <servlet-class>com.unimazad.controllers.home.GetAllProductsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductsByCategoryController</servlet-name>
        <servlet-class>com.unimazad.controllers.home.GetProductsByCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeBidController</servlet-name>
        <servlet-class>com.unimazad.controllers.seller.MakeBidController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/HomePageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NavigationController</servlet-name>
        <url-pattern>/NavigationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewProductListing</servlet-name>
        <url-pattern>/NewProductListing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMyListings</servlet-name>
        <url-pattern>/GetMyListings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllProductsController</servlet-name>
        <url-pattern>/GetAllProductsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductsByCategoryController</servlet-name>
        <url-pattern>/GetProductsByCategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeBidController</servlet-name>
        <url-pattern>/MakeBidController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
